<%- include('../partials/header'); -%>

<div class="box">
    <div class="box-heading">
        Edit <%= campground.name %> 
    </div>
    <div class="align-vertical">
        <form action="/blogs/<%= campground._id %>?_method=PUT" method="POST">
            <!-- <input class="place-holder" type="text" name="campground[name]" value="<%= campground.name %>"> -->
            <label class="label-all" for="description">Description</label>
            <input class="place-holder" type="text" name="campground[description]" value="<%= campground.description %>">
            <!-- <label class="label-all" for="content">Content</label>
            <input class="place-holder-large" type="text" name="campground[content]" value="<%= campground.content %>"> -->
            <label class="label-all" for="content">Blog Content</label>
            <textarea class="place-holder-large" name="campground[content]"><%= campground.content %></textarea>
            <button  class="box-button">Submit</button>
        </form>
    </div>
    <a class="back-button" href="/blogs">Go Back</a>

</div>

